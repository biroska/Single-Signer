		</dependency>
	</dependencies>

	<properties>
		<jersey.version>2.25.1</jersey.version>
		<jersey-version>1.19.1</jersey-version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
</project>
